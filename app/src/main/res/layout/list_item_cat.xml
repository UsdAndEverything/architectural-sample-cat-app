<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="10dp"
        android:foreground="?selectableItemBackground"
        app:cardElevation="4dp"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGrey39"
            android:padding="8dp"
            android:orientation="horizontal"
            tools:layout_conversion_absoluteHeight="116dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="387dp">

            <ImageView
                android:id="@+id/iv_cat_breed_image"
                android:layout_marginEnd="16dp"
                android:background="@color/colorGrey39"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/HeaderTextStyle"
                    android:layout_height="40dp"
                    android:background="@drawable/background_rectangular"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_description"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    style="@style/PrimaryTextStyle" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
