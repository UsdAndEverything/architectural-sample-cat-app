<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name ="PopupMenu" parent="android:Theme.Holo.Light">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="TertiaryHeaderTextStyle" parent="WrapWidthTextViewTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey7D</item>
    </style>

    <style name="WrapWidthTextViewTextStyle" parent="TextViewTextStyle">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextViewTextStyle">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SeparatorEE">
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

    <style name="PrimaryTextStyle" parent="WrapWidthTextViewTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey4A</item>
    </style>

    <style name="HeaderTextStyleBold" parent="WrapWidthTextViewTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey4A</item>
    </style>

    <style name="HeaderTextStyle" parent="WrapWidthTextViewTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey4A</item>
    </style>

    <style name="SeparatorAppearanceV2">
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorItemSeparatorV2</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/colorBlueD0</item>
    </style>

    <style name="WrapImageSourceStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SeparatorAppearance">
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/colorItemSeparator</item>
    </style>

    <style name="SubInfoTextStyle" parent="WrapWidthTextViewTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorGrey7D</item>
    </style>


</resources>